<?xml version="1.0" encoding="GBK"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.shop.web.service.dao.UserDao">	<!-- 根据邮箱登陆 -->	<select id="selectOneByEmail" parameterType="String"		resultType="com.shop.web.service.po.User">		select * from qb_users where email=#{email} and password=#{password}	</select>	<!-- 根据手机号登陆 -->	<select id="selectOneByPhone" parameterType="String"		resultType="com.shop.web.service.po.User">		select * from qb_users where mobile_phone=#{mobilePhone} and password=#{password}	</select>	<!-- 根据用户名登陆 -->	<select id="selectOneByUserName" parameterType="String"		resultType="com.shop.web.service.po.User">		select * from qb_users where user_name=#{userName} and password=#{password}	</select>	<select id="selectOne" parameterType="com.shop.web.service.po.User"		resultType="com.shop.web.service.po.User">		select *		from qb_users t where 1=1		<if test="id!=null and id!=''">			and id=#{id}		</if>		<if test="account!=null and account!=''">			and account=#{account}		</if>		<if test="nickname!=null and nickname!=''">			and nickname=#{nickname}		</if>		<if test="email!=null and email!=''">			and email=#{email}		</if>		<if test="password!=null and password!=''">			and password=#{password}		</if>		<if test="openId!=null and openId!=''">			and openId=#{openId}		</if>		<if test="alipayUseId!=null and alipayUseId!=''">			and alipayUseId=#{alipayUseId}		</if>		<if test="sinaWeiboID!=null and sinaWeiboID!=''">			and sinaWeiboID=#{sinaWeiboID}		</if>	</select></mapper>